\newcommand{\schemaminus}{\mathbin{\textbf{schemaminus}}}
\newcommand{\schemamerge}{\mathbin{\textbf{schemamerge}}}
\newcommand{\hasDefn}{\mathbin{\textbf{hasDefn}}}
\newcommand{\is}{\mathbin{\textbf{is}}}

