<project>
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>net.sourceforge.czt</groupId>
    <artifactId>czt</artifactId>
    <version>1.1-SNAPSHOT</version>
  </parent>
  <groupId>net.sourceforge.czt.jedit</groupId>
  <artifactId>jedit</artifactId>
  <packaging>pom</packaging>
  <name>CZT jEdit plugins</name>
  <properties>
    <jedit.groupId>jedit</jedit.groupId>
    <jedit.artifactId>jedit</jedit.artifactId>
    <jedit.plugin.groupId>jedit.plugins</jedit.plugin.groupId>
    <console.artifactId>Console</console.artifactId>
    <errorlist.artifactId>ErrorList</errorlist.artifactId>
    <sidekick.artifactId>SideKick</sidekick.artifactId>
  </properties>
  <modules>
    <module>zlive</module>
    <module>zsidekick</module>
    <module>zcharmap</module>
    <module>zeves</module>
  </modules>
  <dependencyManagement>
    <dependencies>
     <!-- jEdit -->
      <dependency>
        <groupId>${jedit.groupId}</groupId>
        <artifactId>${jedit.artifactId}</artifactId>
        <version>4.3pre4</version>
      </dependency>
      <dependency>
        <groupId>${jedit.plugin.groupId}</groupId>
        <artifactId>${console.artifactId}</artifactId>
        <version>4.2.6.3</version>
      </dependency>
      <dependency>
        <groupId>${jedit.plugin.groupId}</groupId>
        <artifactId>${errorlist.artifactId}</artifactId>
        <version>1.4</version>
      </dependency>
      <dependency>
        <groupId>${jedit.plugin.groupId}</groupId>
        <artifactId>${sidekick.artifactId}</artifactId>
        <version>0.6.2</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>install</phase>
            <configuration>
              <tasks>
                <property name="dir" location="../../lib"/>
                <property name="file"
                  location="${project.build.directory}/${artifactId}-${version}.jar"/>
                <mkdir dir="${dir}"/>
                <copy failonerror="false"
                  file="${file}" tofile="${dir}/${artifactId}.jar"/>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
