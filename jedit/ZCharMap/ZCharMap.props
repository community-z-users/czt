# Plugin properties

# Basic plugin information properties
plugin.CommunityZToolsPlugin.activate=defer
plugin.CommunityZToolsPlugin.name=Community Z Tools
plugin.CommunityZToolsPlugin.author=Petra Malik
plugin.CommunityZToolsPlugin.version=1.0
plugin.CommunityZToolsPlugin.jars=czt.jar
plugin.CommunityZToolsPlugin.docs=ZCharMap.html

# Plugin dependency properties
plugin.CommunityZToolsPlugin.depend.0=jdk 1.5
plugin.CommunityZToolsPlugin.depend.1=jedit 04.00.04.00
plugin.CommunityZToolsPlugin.depend.2=plugin errorlist.ErrorListPlugin 1.3

# dockable window name
czt.title=Community Z Tools

# Plugin menu item properties
plugin.CommunityZToolsPlugin.menu=czt - \
  czt.typecheck czt.toLatex czt.toUnicode czt.toXml

# action labels
czt.label=Community Z Tools
czt.typecheck.label=Parse and typecheck buffer
czt.toLatex.label=Convert to Latex mark-up
czt.toUnicode.label=Convert to Unicode mark-up
czt.toXml.label=Convert to XML

# Option pane
plugin.CommunityZToolsPlugin.option-pane=czt
options.czt.label=Community Z Tools
options.czt.code=new CztOptionPane();
options.czt.standardConformance=<html><h3>CZT Extensions to Z Standard</h3></html>
options.czt.extractCommaOrSemi=Extract comma, semicolon, and dot from the beginning and end of a DECORWORD
options.czt.addSpaceBeforeLatexPunctation=Add space before latex punctation (, and ; characters)
options.czt.ignoreUnknownLatexCommands=Allow latex commands that do not have mark-up directives
options.czt.resetButton=Reset all options to be Z Standard conforming
