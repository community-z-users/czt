<?xml version="1.0" encoding="UTF-8"?>
<Spec xmlns="http://czt.sourceforge.net/zml"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:xhtml="http://www.w3.org/1999/xhtml"
  xsi:schemaLocation="http://czt.sourceforge.net/zml ../Z.xsd
    http://www.w3.org/1999/xhtml http://www.w3.org/2002/08/xhtml/xhtml1-strict.xsd">
	<NarrSect>
		<Content>Example Birthday Book Z specification</Content>
	</NarrSect>
	<ZSect>
		<Name>Specification</Name>
		<NarrPara>
			<Content><xhtml:p>First we declare some
			<xhtml:em>given types</xhtml:em>.</xhtml:p></Content>
		</NarrPara>

		<GivenPara>
			<DeclName>
				<Word>NAME</Word>
			</DeclName>
			<DeclName>
				<Word>DATE</Word>
			</DeclName>
		</GivenPara>
		<NarrPara>
			<Content>Here is an example of an unknown paragraph that is not Z-related
		                     (it could be some Z extension), so is ignored by standard Z tools.</Content>
		</NarrPara>
		<NarrPara>
			<Content>This huge thing is just the state schema of the Birthday Book.  (I'm not sure which kind of function birthday is).</Content>
		</NarrPara>
                <NarrPara>
                        <Content>
		                <xhtml:pre>
			                BirthdayBook = [known: P NAME; birthday : NAME -?-> DATE | known = dom birthday ]
		                </xhtml:pre>
                        </Content>
                </NarrPara>

		<AxPara Box="SchBox">
			<SchText>
				<ConstDecl>
					<DeclName>
						<Word>BirthdayBook</Word>
					</DeclName>
					<SchExpr>
						<SchText>
							<VarDecl>
								<DeclName>
									<Word>known</Word>
								</DeclName>
								<PowerExpr>
									<RefExpr>
										<RefName>
											<Word>NAME</Word>
										</RefName>
									</RefExpr>
								</PowerExpr>
							</VarDecl>
							<VarDecl>
								<DeclName>
									<Word>birthday</Word>
								</DeclName>
								<RefExpr>
									<RefName>
										<Word>&#x21F8;</Word>
									</RefName>
									<RefExpr>
										<RefName>
											<Word>NAME</Word>
										</RefName>
									</RefExpr>
									<RefExpr>
										<RefName>
											<Word>DATE</Word>
										</RefName>
									</RefExpr>
								</RefExpr>
							</VarDecl>
							<MemPred>
								<TupleExpr>
									<RefExpr>
										<RefName>
											<Word>known</Word>
										</RefName>
									</RefExpr>
									<ApplExpr>
										<RefExpr>
											<RefName>
												<Word>dom</Word>
											</RefName>
											<RefExpr>
												<RefName>
													<Word>NAME</Word>
												</RefName>
											</RefExpr>
											<RefExpr>
												<RefName>
													<Word>DATE</Word>
												</RefName>
											</RefExpr>
										</RefExpr>
										<RefExpr>
											<RefName>
												<Word>birthday</Word>
											</RefName>
										</RefExpr>
									</ApplExpr>
								</TupleExpr>
								<RefExpr>
									<RefName>
										<Word>=</Word>
									</RefName>
									<PowerExpr>
										<RefExpr>
											<RefName>
												<Word>NAME</Word>
											</RefName>
										</RefExpr>
									</PowerExpr>
								</RefExpr>
							</MemPred>
						</SchText>
					</SchExpr>
				</ConstDecl>
			</SchText>
		</AxPara>
	</ZSect>
</Spec>
