<project basedir="." default="install">
  <property name="czt.home" location="../.."/>
  <property file="${czt.home}/czt.properties"/>
  <property name="zeves.src.dir" location="src"/>
  <property name="zeves.build.dir" location="build"/>  
  <property name="zeves.jar.dir" location="${czt.home}/${jar.dir}"/>
  <property name="zeves.jar.file" location="${zeves.jar.dir}/zeves.jar"/>  
  <property name="zeves.src.jar.file" location="${zeves.jar.dir}/src-zeves.jar"/>    
  <property name="zeves.api.dir" location="doc/api"/>
  
  <path id="classpath">
    <!-- <pathelement path="${jwsdp.classpath}"/> -->
    <pathelement location="${build.dir}"/>
    <pathelement location="${czt.home}/${jar.dir}/${corejava.base.jar.file}"/>
    <pathelement location="${czt.home}/${jar.dir}/${corejava.core.jar.file}"/>
    <pathelement location="${czt.home}/${jar.dir}/${corejava.jaxb.jar.file}"/>
    <pathelement location="${czt.home}/${jar.dir}/${java_cup.jar.file}"/>    
    <pathelement location="${czt.home}/${jar.dir}/${java_cup.runtime.jar.file}"/>    
    <pathelement location="${czt.home}/${jar.dir}/${parser.jar.file}"/>
    <pathelement location="${czt.home}/${jar.dir}/${typechecker.jar.file}"/>    
    <pathelement path="${java.class.path}"/>
  </path>
  
  <target name="init">
    <tstamp/>
    <mkdir dir="${zeves.build.dir}"/>
  </target>  
  
  <target name="api"
          description="build the API documentation">
    <mkdir dir="${zeves.api.dir}"/>
    <javadoc
      destdir="${zeves.api.dir}"
      private="true">
      <packageset dir="${zeves.src.dir}"/>
      <tag name="czt.todo" description="To do:"/>
      <classpath refid="classpath"/>
    </javadoc>
  </target>
  
  <target name="compile" depends="init"
          description="compile the sources">
    <javac source="1.5"
           srcdir="${zeves.src.dir}"
           destdir="${zeves.build.dir}"
           debug="${debug}" debuglevel="${debuglevel}" optimize="${optimize}">
      <classpath refid="classpath"/>
      <compilerarg value="-Xlint"/>
    </javac>
  </target>

  <target name="install" depends="compile"
          description="build and install the jar files">
    <mkdir dir="${zeves.jar.dir}"/>
    <jar jarfile="${zeves.jar.file}">
      <fileset dir="${zeves.build.dir}"/>
      <fileset dir="${zeves.src.dir}">
        <include name="**/*.properties"/>
      </fileset>
    </jar>
  </target>  
  
  <target name="src" depends="compile"
    description="generate the jar file with zeves translator source code" >
    <mkdir dir="${zeves.jar.dir}"/>
    <jar jarfile="${zeves.src.jar.file}">
      <fileset dir="${zeves.src.dir}">       
      </fileset>          
    </jar>
  </target>

  
  <target name="checkstyle" description="check java sources">
    <taskdef resource="checkstyletask.properties"
      classpath="${checkstyle.jar}"/>
    <checkstyle config="${czt.home}/devtools/checkstyle.xml">
      <fileset dir="${zeves.src.dir}"/>
      <formatter type="plain"/>
    </checkstyle>
  </target>

  <target name="clean"
          description="clean up">
    <delete dir="${zeves.build.dir}"/>
    <delete dir="${zeves.api.dir}"/>
    <delete file="${zeves.jar.file}"/>
    <!-- <ant dir="tests" target="clean"/> -->
  </target>
 
  <target name="run-print" depends="install" if="file">
    <echo message="Running the z-eves translator printer ..."/>
    <java classname="net.sourceforge.czt.zeves.CZT2ZEves" fork="true">
      <arg value="-print ${file}"/>
      <classpath refid="classpath"/>
      <jvmarg value="-Dczt.home=../.."/>
    </java>
  </target>

</project>
