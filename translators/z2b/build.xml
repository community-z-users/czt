<?xml version="1.0"?>
<project name="z2b" basedir="." default="install">
  <property name="czt.home" location="../.."/>
  <property file="${czt.home}/czt.properties"/>
  <property name="src" location="src"/>
  <property name="build.dir" location="build"/>

  <path id="classpath">
    <pathelement path="${jwsdp.classpath}"/>
    <pathelement location="${build.dir}"/>
    <pathelement location="${czt.home}/${jar.dir}/${corejava.base.jar.file}"/>
    <pathelement location="${czt.home}/${jar.dir}/${corejava.core.jar.file}"/>
    <pathelement location="${czt.home}/${jar.dir}/${corejava.jaxb.jar.file}"/>
    <pathelement location="${czt.home}/${jar.dir}/${session.jar.file}"/>
    <pathelement location="${czt.home}/${jar.dir}/${parser.jar.file}"/>
    <pathelement location="${czt.home}/${jar.dir}/${java_cup.jar.file}"/>
    <pathelement location="${czt.home}/${jar.dir}/gaffe-generator.jar"/>
    <pathelement path="${java.class.path}"/>
  </path>
  
  <target name="compile" description="Compile this translator">
    <echo message="Compiling this translator..."/>
    <mkdir dir="${build.dir}"/>
    <javac source="1.5" srcdir="${src}" destdir="${build.dir}"
      debug="${debug}" debuglevel="${debuglevel}" optimize="${optimize}">
      <classpath refid="classpath"/>
    </javac>
  </target>

  <target name="install" depends="compile"
          description="build and install the jar file">
    <mkdir dir="${czt.home}/${jar.dir}"/>
    <jar jarfile="${czt.home}/${jar.dir}/${z2b.jar.file}">
      <fileset dir="${build.dir}"/>
    </jar>
  </target>

  <target name="test" depends="install"
    description="build and run the unit tests">
    <ant dir="tests" target="test"/>
  </target>

  <target name="classpath" description="Show the classpath">
    <pathconvert targetos="unix" property="tmp.clspath"
	    refid="classpath">
    </pathconvert>
    <echo message="CLASSPATH=${tmp.clspath}"/>
  </target>

  <target name="run" depends="run-with-argument, run-without-argument"
    description="translate tests/birthdaybook.xml, or you can use -Dfile=abc.xml"/>

  <target name="run-without-argument" depends="compile" unless="file">
    <echo message="Translating tests/birthdaybook.xml..."/>
    <java classname="net.sourceforge.czt.z2b.Main" fork="true">
      <arg value="-spec-file"/>
      <arg value="tests/birthdaybook.zed"/>
      <arg value="-stateSchema"/>
      <arg value="BirthdayBook"/>
      <arg value="-initSchema"/>
      <arg value="InitBirthdayBook"/>
      <arg value="-opSchema"/>
      <arg value="AddBirthday"/>
      <arg value="-opSchema"/>
      <arg value="FindBirthday"/>
      <arg value="-opSchema"/>
      <arg value="RemindOne"/>
      <classpath refid="classpath"/>
    </java>
  </target>

  <target name="run-with-argument" depends="compile" if="file">
    <echo message="Translating the given file..."/>
    <java classname="net.sourceforge.czt.z2b.Main" fork="true">
      <arg value="-spec-file"/>
      <arg value="${file}"/>
      <classpath refid="classpath"/>
    </java>
  </target>

  <target name="help" depends="compile" 
      description="Show the help message for the translator">
    <java classname="net.sourceforge.czt.z2b.Main" fork="true">
      <arg value="-help"/>
      <classpath refid="classpath"/>
    </java>
  </target>

  <target name="clean" description="clean up">
    <delete dir="${build.dir}"/>
    <delete file="z2b.log"/>
    <delete file="z2b.log.lck"/>
  </target>

  <target name="checkstyle" description="check java sources">
    <taskdef resource="checkstyletask.properties"
      classpath="${checkstyle.jar}"/>
    <checkstyle config="${czt.home}/devtools/checkstyle.xml">
      <classpath refid="classpath"/>
      <fileset dir="${src}"/>
      <formatter type="plain"/>
    </checkstyle>
  </target>
</project>
