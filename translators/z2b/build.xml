<?xml version="1.0"?>
<project basedir="." default="run">
  <property name="corejava" location="../../corejava"/>
  <property name="src" location="src"/>
  <property name="build.dir" location="build"/>
  <property file="${corejava}/build.properties"/>

  <path id="classpath">
    <filelist dir="${jwsdp.home}"
              files="jaxb/lib/jaxb-xjc.jar
                     jaxb/lib/jaxb-impl.jar
                     jaxb/lib/jaxb-api.jar
                     jaxb/lib/jaxb-libs.jar
                     jaxp/lib/jaxp-api.jar
                     jaxp/lib/endorsed/xalan.jar
                     jaxp/lib/endorsed/xercesImpl.jar
                     jaxp/lib/endorsed/dom.jar
                     jaxp/lib/endorsed/sax.jar
                     jwsdp-shared/lib/namespace.jar
                     jwsdp-shared/lib/jax-qname.jar
                     jwsdp-shared/lib/relaxngDatatype.jar
                     jwsdp-shared/lib/xsdlib.jar"/>
    <pathelement location="${build.dir}"/>
    <pathelement location="${corejava}/lib/base.jar"/>
    <pathelement location="${corejava}/lib/core.jar"/>
    <pathelement location="${corejava}/lib/jaxbSupport.jar"/>
    <pathelement location="${corejava}/lib/gaffe-generator.jar"/>
    <pathelement path="${java.class.path}"/>
  </path>
  
  <target name="compile" description="Compile this translator">
    <echo message="Compiling this translator..."/>
    <mkdir dir="${build.dir}"/>
    <javac source="1.4" srcdir="${src}" destdir="${build.dir}" debug="on">
      <classpath refid="classpath"/>
    </javac>
  </target>

  <target name="classpath" description="Show the classpath">
    <pathconvert targetos="unix" property="tmp.clspath"
	    refid="classpath">
    </pathconvert>
    <echo message="CLASSPATH=${tmp.clspath}"/>
  </target>

  <target name="run" depends="run-with-argument, run-without-argument"
    description="translate tests/birthdaybook.xml, or you can use -Dfile=abc.xml"/>

  <target name="run-without-argument" depends="compile" unless="file">
    <echo message="Translating tests/birthdaybook.xml..."/>
    <java classname="net.sourceforge.czt.z2b.Main" fork="true">
      <arg value="-spec-file"/>
      <arg value="tests/birthdaybook.xml"/>
      <arg value="-stateSchema"/>
      <arg value="BirthdayBook"/>
      <arg value="-opSchema"/>
      <arg value="FindBirthday"/>
      <arg value="-opSchema"/>
      <arg value="Remind"/>
      <classpath refid="classpath"/>
    </java>
  </target>

  <target name="run-with-argument" depends="compile" if="file">
    <echo message="Translating the given file..."/>
    <java classname="net.sourceforge.czt.z2b.Main" fork="true">
      <arg value="-spec-file"/>
      <arg value="${file}"/>
      <classpath refid="classpath"/>
    </java>
  </target>

  <target name="help" depends="compile" 
      description="Show the help message for the translator">
    <java classname="net.sourceforge.czt.z2b.Main" fork="true">
      <arg value="-help"/>
      <classpath refid="classpath"/>
    </java>
  </target>

  <target name="clean" description="clean up">
    <delete dir="${build.dir}"/>
    <delete file="z2b.log"/>
    <delete file="z2b.log.lck"/>
  </target>
</project>
