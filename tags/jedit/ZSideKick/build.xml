<project name="jEdit ZSideKick" default="all">
  <property name="czt.home" location="../.."/>
  <property file="${czt.home}/czt.properties"/>
  <property name="zsidekick-jedit-plugin.jar.dir"
    location="${czt.home}/${jar.dir}"/>
  <property name="jar.file"
    location="${zsidekick-jedit-plugin.jar.dir}/${zsidekick-jedit-plugin.jar.file}"/>
  <property name="zsidekick-jedit-plugin.src.dir" location="src/main/java"/>
  <property name="zsidekick-jedit-plugin.build.dir" location="build"/>
  <property name="zsidekick-jedit-plugin.api.dir" location="doc/api"/>

  <path id="zsidekick-jedit-plugin.class.path">
    <fileset dir="${czt.home}/${jar.dir}">
      <include name="${czt.jar.file}"/>
    </fileset>
    <pathelement path="${jedit.jar}"/>
    <pathelement path="${jedit-console.jar}"/>
    <pathelement path="${jedit-errorlist.jar}"/>
    <pathelement path="${jedit-sidekick.jar}"/>
    <pathelement path="${java.class.path}"/>
    <pathelement path="${ant.home}/lib/clover.jar"/>
  </path>

  <target name="init">
    <tstamp/>
    <mkdir dir="${zsidekick-jedit-plugin.build.dir}/classes"/>
  </target>

  <target name="all" depends="install, doc"
    description="build the jar files and the documentation"/>

  <target name="install" depends="compile"
          description="build and install the jar files">
    <mkdir dir="${zsidekick-jedit-plugin.jar.dir}"/>
    <jar jarfile="${jar.file}">
      <fileset dir="${zsidekick-jedit-plugin.build.dir}/classes"/>
      <fileset dir="src/main/resources"/>
    </jar>
  </target>

  <target name="compile" depends="init"
          description="compile the sources">
    <javac
      srcdir="${zsidekick-jedit-plugin.src.dir}"
      destdir="${zsidekick-jedit-plugin.build.dir}/classes"
      debug="${debug}"
      debuglevel="${debuglevel}"
      optimize="${optimize}">
      <classpath refid="zsidekick-jedit-plugin.class.path"/>
      <compilerarg value="${compilerarg}"/>
    </javac>
  </target>

  <target name="doc" depends="api"
    description="build all the documentation"/>

  <target name="api"
          description="build the API documentation">
    <mkdir dir="${zsidekick-jedit-plugin.api.dir}"/>
    <javadoc
      destdir="${zsidekick-jedit-plugin.api.dir}"
      private="true">
      <packageset dir="${zsidekick-jedit-plugin.src.dir}"/>
      <classpath refid="zsidekick-jedit-plugin.class.path"/>
      <tag name="czt.todo" description="To do:"/>
    </javadoc>
  </target>

  <target name="checkstyle" description="check java sources">
    <taskdef resource="checkstyletask.properties"
      classpath="${checkstyle.jar}"/>
    <checkstyle config="${czt.home}/devtools/checkstyle.xml">
      <fileset dir="${zsidekick-jedit-plugin.src.dir}"/>
      <formatter type="plain"/>
    </checkstyle>
  </target>

  <target name="clean"
          description="clean up">
    <delete dir="${zsidekick-jedit-plugin.build.dir}"/>
    <delete dir="${zsidekick-jedit-plugin.api.dir}"/>
  </target>
</project>
