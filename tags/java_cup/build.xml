<project name="cup" default="all">
  <property name="czt.home" location=".."/>
  <property file="${czt.home}/czt.properties"/>
  <property name="cup.jar.dir" location="${czt.home}/${jar.dir}"/>
  <property name="jar.file" location="${cup.jar.dir}/${java_cup.jar.file}"/>
  <property name="cup.src.dir" location="src/main/java"/>
  <property name="cup.build.dir" location="build"/>
  <property name="cup.api.dir" location="doc/api"/>
  <property name="test.src.dir" location="src/test/java"/>
  <property name="test.build.dir" location="${cup.build.dir}/test"/>
  <property name="test.jar.file" location="${cup.build.dir}/tests.jar"/>

  <target name="init">
    <tstamp/>
    <mkdir dir="${cup.build.dir}/classes"/>
    <mkdir dir="${test.build.dir}"/>
  </target>

  <target name="all" depends="install, doc"
    description="build the jar files and the documentation"/>

  <target name="install" depends="compile"
          description="build and install the jar files">
    <mkdir dir="${cup.jar.dir}"/>
    <jar jarfile="${jar.file}">
      <fileset dir="${cup.build.dir}/classes"/>
    </jar>
  </target>

  <target name="compile" depends="init"
          description="compile the sources">
    <javac
      srcdir="${cup.src.dir}"
      destdir="${cup.build.dir}/classes"
      debug="${debug}"
      debuglevel="${debuglevel}"
      optimize="${optimize}">
      <compilerarg value="${compilerarg}"/>
    </javac>
  </target>

  <target name="test" depends="run-tests">
    <junitreport todir="${cup.build.dir}">
      <fileset dir="${cup.build.dir}">
        <include name="TEST-*.xml"/>
      </fileset>
      <report format="frames" todir="${cup.build.dir}/report"/>
    </junitreport>
  </target>

  <target name="compile-tests" depends="install">
    <javac
      srcdir="${test.src.dir}"
      destdir="${test.build.dir}"
      debug="${debug}"
      debuglevel="${debuglevel}"
      optimize="${optimize}">
      <classpath>
        <pathelement location="${jar.file}"/>
      </classpath>
      <compilerarg value="-Xlint"/>
    </javac>
  </target>

  <target name="install-tests" depends="compile-tests">
    <mkdir dir="${cup.build.dir}"/>
    <jar jarfile="${test.jar.file}">
      <fileset dir="${test.build.dir}"/>
    </jar>
  </target>

  <target name="run-tests" depends="install-tests">
    <junit fork="yes" printsummary="on">
      <formatter type="xml"/>
      <test toDir="${cup.build.dir}"
        name="net.sourceforge.czt.util.DelegatorTest"/>
      <classpath>
        <pathelement location="${jar.file}"/>
        <pathelement location="${test.jar.file}"/>
      </classpath>
    </junit>
  </target>

  <target name="doc" depends="api"
    description="build all the documentation"/>

  <target name="api"
          description="build the API documentation">
    <mkdir dir="${cup.api.dir}"/>
    <javadoc
      destdir="${cup.api.dir}"
      private="true">
      <packageset dir="${cup.src.dir}"/>
      <tag name="czt.todo" description="To do:"/>
    </javadoc>
  </target>
  
  <target name="clean"
          description="clean up">
    <delete dir="${cup.build.dir}"/>
    <delete dir="${cup.api.dir}"/>
  </target>
</project>
