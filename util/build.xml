<project name="util" default="all">
  <property name="czt.home" location=".."/>
  <property file="${czt.home}/czt.properties"/>
  <property name="util.jar.dir" location="${czt.home}/${jar.dir}"/>
  <property name="jar.file" location="${util.jar.dir}/${util.jar.file}"/>
  <property name="util.src.dir" location="src/main/java"/>
  <property name="util.build.dir" location="build"/>
  <property name="util.api.dir" location="doc/api"/>
  <property name="test.src.dir" location="src/test/java"/>
  <property name="test.build.dir" location="${util.build.dir}/test"/>
  <property name="test.jar.file" location="${util.build.dir}/tests.jar"/>

  <target name="init">
    <tstamp/>
    <mkdir dir="${util.build.dir}/classes"/>
    <mkdir dir="${test.build.dir}"/>
  </target>

  <target name="all" depends="install, doc"
    description="build the jar files and the documentation"/>

  <target name="install" depends="compile"
          description="build and install the jar files">
    <mkdir dir="${util.jar.dir}"/>
    <jar jarfile="${jar.file}">
      <fileset dir="${util.build.dir}/classes"/>
    </jar>
  </target>

  <target name="compile" depends="init"
          description="compile the sources">
    <javac
      srcdir="${util.src.dir}"
      destdir="${util.build.dir}/classes"
      debug="${debug}"
      debuglevel="${debuglevel}"
      optimize="${optimize}">
      <compilerarg value="${compilerarg}"/>
    </javac>
  </target>

  <target name="test" depends="run-tests">
    <junitreport todir="${util.build.dir}">
      <fileset dir="${util.build.dir}">
        <include name="TEST-*.xml"/>
      </fileset>
      <report format="frames" todir="${util.build.dir}/report"/>
    </junitreport>
  </target>

  <target name="compile-tests" depends="install">
    <javac
      srcdir="${test.src.dir}"
      destdir="${test.build.dir}"
      debug="${debug}"
      debuglevel="${debuglevel}"
      optimize="${optimize}">
      <classpath>
        <pathelement location="${jar.file}"/>
      </classpath>
      <compilerarg value="-Xlint"/>
    </javac>
  </target>

  <target name="install-tests" depends="compile-tests">
    <mkdir dir="${util.build.dir}"/>
    <jar jarfile="${test.jar.file}">
      <fileset dir="${test.build.dir}"/>
    </jar>
  </target>

  <target name="run-tests" depends="install-tests">
    <junit fork="yes" printsummary="on">
      <formatter type="xml"/>
      <test toDir="${util.build.dir}"
        name="net.sourceforge.czt.util.DelegatorTest"/>
      <classpath>
        <pathelement location="${jar.file}"/>
        <pathelement location="${test.jar.file}"/>
      </classpath>
    </junit>
  </target>

  <target name="doc" depends="api"
    description="build all the documentation"/>

  <target name="api"
          description="build the API documentation">
    <mkdir dir="${util.api.dir}"/>
    <javadoc
      destdir="${util.api.dir}"
      private="true">
      <packageset dir="${util.src.dir}"/>
      <tag name="czt.todo" description="To do:"/>
    </javadoc>
  </target>

  <target name="checkstyle" description="check java sources">
    <taskdef resource="checkstyletask.properties"
      classpath="${checkstyle.jar}"/>
    <checkstyle config="${czt.home}/devtools/checkstyle.xml">
      <fileset dir="${util.src.dir}"/>
      <formatter type="plain"/>
    </checkstyle>
  </target>

  <target name="clean"
          description="clean up">
    <delete dir="${util.build.dir}"/>
    <delete dir="${util.api.dir}"/>
  </target>
</project>
