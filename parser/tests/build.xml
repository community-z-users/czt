<?xml version="1.0"?>
<project basedir="." default="run">
  <property name="czt.home" location="../.."/>
  <property file="${czt.home}/czt.properties"/>
  <property name="build.dir" value="build"/>
  <property name="corejava.base.jar" location="${czt.home}/${jar.dir}/${corejava.base.jar.file}"/>

  <path id="classpath">
    <pathelement location="${corejava.base.jar}"/>
    <pathelement location="${build.dir}"/>
    <pathelement path="${java.class.path}"/>
  </path>
  
  <target name="init">
    <tstamp/>
    <mkdir dir="${build.dir}"/>
  </target>

  <target name="compile" depends="init" description="compile the test">
    <echo message="Compiling the sample application..."/>
    <javac srcdir="src" destdir="${build.dir}" debug="on">
      <classpath refid="classpath"/>
    </javac>
  </target>
  
  <target name="run" depends="compile">
    <junit dir="${basedir}" fork="yes" printsummary="on">
      <formatter type="brief" usefile="false"/>
      <test name="net.sourceforge.czt.scanner.UnicodeLexerTest"/>
      <test name="net.sourceforge.czt.scanner.Latex2UnicodeTest"/>
      <classpath refid="classpath"/>
    </junit>
  </target>

  <target name="clean" description="clean up">
    <delete dir="${build.dir}"/>
  </target>
</project>
