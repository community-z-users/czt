<?xml version="1.0"?>
<project basedir="." default="run">
  <property name="build.dir" value="build"/>
  <path id="classpath">
    <pathelement location="../build"/>
    <pathelement location="${build.dir}"/>
    <pathelement path="${java.class.path}"/>
  </path>
  
  <target name="init">
    <tstamp/>
    <mkdir dir="${build.dir}"/>
  </target>

  <target name="compile" depends="init" description="compile the test">
    <echo message="Compiling the sample application..."/>
    <javac srcdir="src" destdir="${build.dir}" debug="on">
      <classpath refid="classpath"/>
    </javac>
  </target>
  
  <target name="run" depends="compile" description="run the test">
    <echo message="Running the sample application..."/>
    <java classname="net.sourceforge.czt.scanner.ScannerTest" fork="true">
      <arg value="bbook.utf8"/>
      <classpath refid="classpath"/>
    </java>
  </target>

  <target name="clean" description="clean up">
    <delete dir="${build.dir}"/>
  </target>
</project>
