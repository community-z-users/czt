<project name="czt_jaxbSupport" default="jar" basedir=".">
  <property name="corejava.build"
            location="${corejava.build.dir}/jaxb"/>
  <property name="corejava.jar.file"
            location="${corejava.jar.dir}/${corejava.jaxb.jar.file}"/>
  <property name="corejava.api.jaxb.dir"
            location="doc/jaxb-api"/>

  <path id="corejava.classpath">
    <filelist dir="${corejava.jar.dir}"
              files="${corejava.base.jar.file}
                     ${corejava.core.jar.file}
                     ${corejava.zpatt.jar.file}
                     ${corejava.oz.jar.file}"/>
  </path>

  <target name="init">
    <tstamp/>
    <mkdir dir="${corejava.build}"/>
  </target>

  <target name="jar" depends="compile"
          description="generate the base jar file" >
    <jar jarfile="${corejava.jar.file}">
      <fileset dir="${corejava.build}"/>
      <fileset dir="${corejava.src.dir}">
        <include name="**/*.properties"/>
      </fileset>
    </jar>
  </target>

  <target name="compile" depends="init"
    description="compile the source code">
    <javac srcdir="${corejava.src.dir}"
           destdir="${corejava.build}"
           debug="true"
           includes="**/jaxb/** org/**">
      <classpath>
        <path refid="corejava.classpath"/>
        <pathelement path="${jwsdp.classpath}"/>
      </classpath>
    </javac>
  </target>

  <target name="api">
    <mkdir dir="${corejava.api.jaxb.dir}"/>
    <javadoc
      sourcepath="${corejava.src.dir}"
      destdir="${corejava.api.jaxb.dir}"
      private="true">
      <packageset dir="${corejava.src.dir}" defaultexcludes="yes">
        <include name="org/**"/>
        <include name="**/jaxb/gen/**"/>
      </packageset>
      <classpath path="jwsdp.classpath"/>
    </javadoc>
  </target>

  <target name="clean"
          description="clean up">
    <delete dir="${corejava.build}"/>
    <delete dir="${corejava.api.jaxb.dir}"/>
    <delete file="${corejava.jar.file}"/>
  </target>
</project>
