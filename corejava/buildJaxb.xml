<project name="czt_jaxbSupport" default="all" basedir=".">
  <property name="corejava.build" location="${corejava.build.dir}/jaxb"/>
  <property name="corejava.jar.file" location="${corejava.jar.dir}/${corejava.jaxb.jar.file}"/>
  <path id="classpath">
    <filelist dir="${jwsdp.home}"
              files="jaxb/lib/jaxb-xjc.jar
                     jaxb/lib/jaxb-impl.jar
                     jaxb/lib/jaxb-api.jar
                     jaxb/lib/jaxb-libs.jar
                     jaxp/lib/jaxp-api.jar
                     jaxp/lib/endorsed/xalan.jar
                     jaxp/lib/endorsed/xercesImpl.jar
                     jaxp/lib/endorsed/dom.jar
                     jaxp/lib/endorsed/sax.jar
                     jwsdp-shared/lib/namespace.jar
                     jwsdp-shared/lib/jax-qname.jar
                     jwsdp-shared/lib/relaxngDatatype.jar
                     jwsdp-shared/lib/xsdlib.jar"/>
    <filelist dir="${corejava.jar.dir}"
      files="${corejava.base.jar.file}
             ${corejava.core.jar.file}
             ${corejava.zpatt.jar.file}
             ${corejava.oz.jar.file}"/>
  </path>

  <target name="all" depends="jar"/>

  <target name="jar" depends="compile"
          description="generate the base jar file" >
    <jar jarfile="${corejava.jar.file}">
      <fileset dir="${corejava.build}"/>
      <fileset dir="${corejava.src}">
        <include name="**/*.properties"/>
      </fileset>
    </jar>
  </target>

  <target name="init">
    <tstamp/>
    <mkdir dir="${corejava.build}"/>
  </target>

  <target name="compile"
          depends="init"
          description="compile the source code">
    <javac
      srcdir="${corejava.src}"
      destdir="${corejava.build}"
      debug="true"
      includes="**/jaxb/** org/**">
      <classpath refid="classpath"/> 
    </javac>
  </target>

  <target name="clean"
          description="clean up">
    <delete dir="${corejava.build}"/>
    <delete file="${corejava.jar.file}"/>
  </target>
</project>
