<project name="czt_object-Z" default="all" basedir=".">
  <property name="build" location="${build.dir}/zpatt"/>
  <property name="jar.file" location="${jar.dir}/${zpatt.jar.file}"/>

  <path id="classpath">
    <filelist dir="${jar.dir}"
      files="${base.jar.file}
             ${core.jar.file}"/>
  </path>

  <target name="all" depends="jar"/>

  <target name="jar" depends="compile"
          description="generate the base jar file" >
    <jar jarfile="${jar.file}">
      <fileset dir="${build}"/>
    </jar>
  </target>

  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="compile"
          depends="init"
          description="compile the source code">
    <javac
      srcdir="${src}"
      destdir="${build}"
      debug="true"
      includes="net/sourceforge/czt/zpatt/**"
      excludes="net/sourceforge/czt/zpatt/jaxb/**">
      <classpath refid="classpath"/>
    </javac>
  </target>

  <target name="clean"
          description="clean up">
    <delete dir="${build}"/>
    <delete file="${jar.file}"/>
  </target>
</project>
