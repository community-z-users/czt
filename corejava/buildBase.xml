<project name="czt_base" default="all" basedir=".">
  <property name="corejava.build" location="${corejava.build.dir}/base"/>
  <property name="corejava.jar.file" location="${corejava.jar.dir}/${corejava.base.jar.file}"/>

  <target name="all" depends="jar"/>

  <target name="jar" depends="compile"
          description="generate the base jar file" >
    <jar jarfile="${corejava.jar.file}">
      <fileset dir="${corejava.build}"/>
    </jar>
  </target>

  <target name="init">
    <tstamp/>
    <mkdir dir="${corejava.build}"/>
  </target>

  <target name="compile"
          depends="init"
          description="compile the source code">
    <javac
      srcdir="${corejava.src}"
      destdir="${corejava.build}"
      debug="true"
      includes="net/sourceforge/czt/util/**,net/sourceforge/czt/base/**"
      excludes="net/sourceforge/czt/base/jaxb/**">
    </javac>
  </target>

  <target name="clean"
          description="clean up">
    <delete dir="${corejava.build}"/>
    <delete file="${corejava.jar.file}"/>
  </target>
</project>
