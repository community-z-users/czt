<project name="corejava" default="all" basedir=".">
  <property file="../czt.properties"/>
  <property name="corejava.jar.dir" location="../${jar.dir}"/>
  <property name="corejava.src" location="src"/>
  <property name="corejava.build.dir" location="build"/>
  <property name="corejava.api.dir" location="doc/api"/>

  <path id="jwsdp.classpath">
    <fileset dir="${jwsdp.home}/jaxb/lib">
      <include name="**/*.jar"/>
    </fileset>
    <fileset dir="${jwsdp.home}/jaxp/lib">
      <include name="**/*.jar"/>
    </fileset>
    <fileset dir="${jwsdp.home}/jwsdp-shared/lib">
      <include name="**/*.jar"/>
    </fileset>
  </path>

  <taskdef resource="checkstyletask.properties"
    classpath="${checkstyle.home}/checkstyle-all-3.2.jar"/>

  <target name="all" depends="jar,api"
    description="build the jar files and the API documentation"/>

  <target name="jar" description="build the jar files">
    <mkdir dir="${corejava.jar.dir}"/>
    <echo message="Building base ..."/>
    <ant antfile="buildBase.xml"/>
    <echo message="Building core ..."/>
    <ant antfile="buildCore.xml"/>
    <echo message="Building object Z ..."/>
    <ant antfile="buildObjectZ.xml"/>
    <echo message="Building z pattern ..."/>
    <ant antfile="buildZPattern.xml"/>
    <echo message="Building jaxb support ..."/>
    <ant antfile="buildJaxb.xml"/>
  </target>

  <target name="check">
    <available file="${jwsdp.home}"
               type="dir" 
               property="jwsdp.home.present"/>
  </target>

  <target name="unset-jwsdp-classpath"
          unless="jwsdp.home.present"
          depends="check">
    <echo message="WARNING: Property jwsdp.home is not set properly."/>
    <echo message="  This property can be set in file 'czt.properties'."/>
    <echo message="  Assuming JWSDP classes are already in the classpath ..."/>
    <path id="jwsdp.classpath"/>
  </target>

  <target name="api"
          description="build the API documentation"
          depends="check, unset-jwsdp-classpath">
    <mkdir dir="${corejava.api.dir}"/>
    <javadoc
      destdir="${corejava.api.dir}"
      private="true"
      Overview="src/overview.html">
      <packageset dir="${corejava.src}" defaultexcludes="yes">
        <include name="net/sourceforge/**"/>
        <exclude name="**/jaxb/gen/**"/>
      </packageset>
      <tag name="czt.todo" description="To do:"/>
      <doctitle><![CDATA[<h1>The Annotated Syntax Tree (AST) for Z API</h1>]]></doctitle>
      <group title="Base Z Packages" packages="net.sourceforge.czt.base.*"/>
      <group title="Standard Z Packages" packages="net.sourceforge.czt.z.*"/>
      <group title="Object Z Packages" packages="net.sourceforge.czt.oz.*"/>
      <group title="Timed Communicating Object Z Packages" packages="net.sourceforge.czt.tcoz.*"/>
      <group title="Z Pattern Packages" packages="net.sourceforge.czt.zpatt.*"/>
      <classpath>
        <path refid="jwsdp.classpath"/>
      </classpath>
    </javadoc>
  </target>

  <target name="jaxb-api"
          description="build the API documentation for JAXB generated classes">
    <ant antfile="buildJaxb.xml" target="api"/>
  </target>

  <target name="examples" depends="jar"
    description="build and run the examples">
    <ant dir="examples/debug"/>
    <ant dir="examples/unmarshal"/>
    <ant dir="examples/marshal"/>
    <ant dir="examples/substitutionVisitor"/>
  </target>

  <target name="test" depends="jar"
    description="build and run the tests">
    <ant dir="tests"/>
  </target>

  <target name="checkstyle" description="check java sources">
    <checkstyle config="../devtools/checkstyle.xml">
      <fileset dir="src">
        <exclude name="**/gen/**/*.java"/>
        <exclude name="org/**/*.java"/>
      </fileset>
      <formatter type="plain"/>
    </checkstyle>
  </target>

  <target name="clean"
          description="clean up">
    <delete dir="${corejava.build.dir}"/>
    <delete dir="${corejava.api.dir}"/>
    <ant dir="tests" target="clean"/>
    <ant dir="examples/debug" target="clean"/>
    <ant dir="examples/unmarshal" target="clean"/>
    <ant dir="examples/marshal" target="clean"/>
    <ant dir="examples/substitutionVisitor" target="clean"/>
  </target>
</project>
