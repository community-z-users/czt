<project name="corejava" default="all" basedir=".">
  <property file="build.properties"/>
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="api.destdir" location="doc/api"/>

  <path id="classpath">
    <filelist dir="${jwsdp.home}"
              files="jaxb/lib/jaxb-xjc.jar
                     jaxb/lib/jaxb-impl.jar
                     jaxb/lib/jaxb-api.jar
                     jaxb/lib/jaxb-libs.jar
                     jaxp/lib/jaxp-api.jar
                     jaxp/lib/endorsed/xalan.jar
                     jaxp/lib/endorsed/xercesImpl.jar
                     jaxp/lib/endorsed/dom.jar
                     jaxp/lib/endorsed/sax.jar
                     jwsdp-shared/lib/namespace.jar
                     jwsdp-shared/lib/jax-qname.jar
                     jwsdp-shared/lib/relaxngDatatype.jar
                     jwsdp-shared/lib/xsdlib.jar"/>
  </path>

  <target name="all" depends="jar, api"/>

  <target name="jar" depends="compile"
          description="generate the jar file" >
    <jar jarfile="${jar.file}">
      <fileset dir="${build}"/>
      <fileset dir="${src}">
        <include name="**/*.properties"/>
      </fileset>
    </jar>
  </target>

  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="compile"
          depends="init"
          description="compile the source code">
    <javac srcdir="${src}" destdir="${build}" debug="true">
      <classpath refid="classpath"/> 
    </javac>
  </target>

  <target name="api"
          description="build javadoc documentation">
    <mkdir dir="${api.destdir}"/>
    <javadoc 
      sourcepath="${src}"
      destdir="${api.destdir}"
      packagenames="*"
      excludepackagenames="**.jaxb.gen.impl.*"
      private="true">
      <tag name="czt.todo" description="To do:"/>
      <classpath refid="classpath"/>
    </javadoc>
  </target>

  <target name="examples" depends="jar">
    <ant dir="examples/unmarshal"/>
    <ant dir="examples/marshal"/>
    <ant dir="examples/substitutionVisitor"/>
  </target>

  <target name="test" depends="jar">
    <ant dir="tests"/>
  </target>

  <target name="clean"
          description="clean up">
    <delete dir="${build}"/>
    <delete dir="${api.destdir}"/>
    <delete file="${jar.file}"/>
    <ant dir="tests" target="clean"/>
    <ant dir="examples/unmarshal" target="clean"/>
    <ant dir="examples/marshal" target="clean"/>
  </target>
</project>
