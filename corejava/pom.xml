<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>net.sourceforge.czt</groupId>
    <artifactId>czt</artifactId>
    <version>1.6-SNAPSHOT</version>
  </parent>
  <artifactId>corejava</artifactId>
  <packaging>jar</packaging>
  <version>2.1.5-SNAPSHOT</version>
  <name>CZT Corejava</name>
  <description>
    Provides AST classes for Z and Z extensions.
  </description>
  <dependencies>
    <dependency>
      <groupId>${czt.groupId}</groupId>
      <artifactId>jaxb</artifactId>
    </dependency>
    <dependency>
      <groupId>${czt.groupId}</groupId>
      <artifactId>zml</artifactId>
    </dependency>
  </dependencies>
  <properties>
    <build.xml.dir>${basedir}/target/generated-sources/xml/xslt</build.xml.dir>
    <xml.dir>${basedir}/src/main/resources/xml</xml.dir>
    <xsl.dir>${basedir}/src/main/resources/xsl</xsl.dir>
  </properties>
  <build>
    <plugins>
      <!-- Put GnAST plugin first since xml generation ought to generate to ./gnast as well -->
      <plugin>
        <groupId>net.sourceforge.czt</groupId>
        <artifactId>maven-gnast-plugin</artifactId>
        <version>1.6-SNAPSHOT</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <configuration>
              <gnastdir>${basedir}/../gnast</gnastdir>
              <addAstFinaliser>true</addAstFinaliser>
              <gnastVerbose>true</gnastVerbose>
            </configuration>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>xml-maven-plugin</artifactId>
        <version>1.0</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <configuration>
              <transformationSets>
                <transformationSet>
                  <dir>${xml.dir}</dir>
                  <includes>
                    <include>zchar.xml</include>
                  </includes>
                  <outputDir>${build.xml.dir}/net/sourceforge/czt/z/util/</outputDir>
                    <fileMappers>
                      <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.MergeFileMapper">
                        <targetName>ZChar.java</targetName>
                      </fileMapper>
                    </fileMappers>
                  <stylesheet>${xsl.dir}/zchar2class.xsl</stylesheet>
                </transformationSet>
                <transformationSet>
                  <dir>${xml.dir}</dir>
                  <includes>
                    <include>zchar.xml</include>
                  </includes>
                  <outputDir>${build.xml.dir}/net/sourceforge/czt/z/util/</outputDir>
                    <fileMappers>
                      <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.MergeFileMapper">
                        <targetName>ZString.java</targetName>
                      </fileMapper>
                    </fileMappers>
                  <stylesheet>${xsl.dir}/zchar2stringclass.xsl</stylesheet>
                </transformationSet>
                <transformationSet>
                  <dir>${xml.dir}</dir>
                  <includes>
                    <include>ozchar.xml</include>
                  </includes>
                  <outputDir>${build.xml.dir}/net/sourceforge/czt/oz/util/</outputDir>
                    <fileMappers>
                      <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.MergeFileMapper">
                        <targetName>OzChar.java</targetName>
                      </fileMapper>
                    </fileMappers>
                  <stylesheet>${xsl.dir}/ozchar2class.xsl</stylesheet>
                </transformationSet>
                <transformationSet>
                  <dir>${xml.dir}</dir>
                  <includes>
                    <include>ozchar.xml</include>
                  </includes>
                  <outputDir>${build.xml.dir}/net/sourceforge/czt/oz/util/</outputDir>
                    <fileMappers>
                      <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.MergeFileMapper">
                        <targetName>OzString.java</targetName>
                      </fileMapper>
                    </fileMappers>
                  <stylesheet>${xsl.dir}/ozchar2stringclass.xsl</stylesheet>
                </transformationSet>
                <transformationSet>
                  <dir>${xml.dir}</dir>
                  <includes>
                    <include>circuschar.xml</include>
                  </includes>
                  <outputDir>${build.xml.dir}/net/sourceforge/czt/circus/util/</outputDir>
                    <fileMappers>
                      <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.MergeFileMapper">
                        <targetName>CircusChar.java</targetName>
                      </fileMapper>
                    </fileMappers>
                  <stylesheet>${xsl.dir}/circuschar2class.xsl</stylesheet>
                </transformationSet>
                <transformationSet>
                  <dir>${xml.dir}</dir>
                  <includes>
                    <include>circuschar.xml</include>
                  </includes>
                  <outputDir>${build.xml.dir}/net/sourceforge/czt/circus/util/</outputDir>
                    <fileMappers>
                      <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.MergeFileMapper">
                        <targetName>CircusString.java</targetName>
                      </fileMapper>
                    </fileMappers>
                  <stylesheet>${xsl.dir}/circuschar2stringclass.xsl</stylesheet>
                </transformationSet>
                <transformationSet>
                  <dir>${xml.dir}</dir>
                  <includes>
                    <include>zpattchar.xml</include>
                  </includes>
                  <outputDir>${build.xml.dir}/net/sourceforge/czt/zpatt/util/</outputDir>
                    <fileMappers>
                      <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.MergeFileMapper">
                        <targetName>ZPattChar.java</targetName>
                      </fileMapper>
                    </fileMappers>
                  <stylesheet>${xsl.dir}/zpattchar2class.xsl</stylesheet>
                </transformationSet>
                <transformationSet>
                  <dir>${xml.dir}</dir>
                  <includes>
                    <include>zpattchar.xml</include>
                  </includes>
                  <outputDir>${build.xml.dir}/net/sourceforge/czt/zpatt/util/</outputDir>
                    <fileMappers>
                      <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.MergeFileMapper">
                        <targetName>ZPattString.java</targetName>
                      </fileMapper>
                    </fileMappers>
                  <stylesheet>${xsl.dir}/zpattchar2stringclass.xsl</stylesheet>
                </transformationSet>
                <transformationSet>
                  <dir>${xml.dir}</dir>
                  <includes>
                    <include>zeveschar.xml</include>
                  </includes>
                  <outputDir>${build.xml.dir}/net/sourceforge/czt/zeves/util/</outputDir>
                    <fileMappers>
                      <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.MergeFileMapper">
                        <targetName>ZEvesChar.java</targetName>
                      </fileMapper>
                    </fileMappers>
                  <stylesheet>${xsl.dir}/zeveschar2class.xsl</stylesheet>
                </transformationSet>
                <transformationSet>
                  <dir>${xml.dir}</dir>
                  <includes>
                    <include>zeveschar.xml</include>
                  </includes>
                  <outputDir>${build.xml.dir}/net/sourceforge/czt/zeves/util/</outputDir>
                    <fileMappers>
                      <fileMapper implementation="org.codehaus.plexus.components.io.filemappers.MergeFileMapper">
                        <targetName>ZEvesString.java</targetName>
                      </fileMapper>
                    </fileMappers>
                  <stylesheet>${xsl.dir}/zeveschar2stringclass.xsl</stylesheet>
                </transformationSet>
              </transformationSets>
            </configuration>
            <goals>
              <goal>transform</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${build.xml.dir}</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
