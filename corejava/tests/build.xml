<?xml version="1.0"?>
<project default="run">
  <property file="../../czt.properties"/>
  
  <path id="classpath">
    <filelist dir="${jwsdp.home}"
              files="jaxb/lib/jaxb-xjc.jar
                     jaxb/lib/jaxb-impl.jar
                     jaxb/lib/jaxb-api.jar
                     jaxb/lib/jaxb-libs.jar
                     jaxp/lib/jaxp-api.jar
                     jaxp/lib/endorsed/xalan.jar
                     jaxp/lib/endorsed/xercesImpl.jar
                     jaxp/lib/endorsed/dom.jar
                     jaxp/lib/endorsed/sax.jar
                     jwsdp-shared/lib/namespace.jar
                     jwsdp-shared/lib/jax-qname.jar
                     jwsdp-shared/lib/relaxngDatatype.jar
                     jwsdp-shared/lib/xsdlib.jar"/>
    <fileset dir="../../${jar.dir}">
      <include name="*.jar"/>
    </fileset>
    <pathelement location="."/>
    <pathelement path="${java.class.path}"/>
  </path>
  
  <target name="compile">
    <javac srcdir="." destdir="." debug="yes">
      <classpath refid="classpath"/>
    </javac>
  </target>
  
  <target name="run" depends="compile">
    <junit dir="${basedir}" fork="yes" printsummary="on">
      <formatter type="brief" usefile="false"/>
      <test name="eg1.Eg1"/>
      <test name="oz.OzAstTest"/>
      <test name="net.sourceforge.czt.util.DelegatorTest"/>
      <classpath refid="classpath"/>
    </junit>
  </target>

  <target name="clean">
    <delete>
      <fileset dir="${basedir}" includes="**/*.class"/>
    </delete>
    <delete>
      <fileset dir="${basedir}" includes="**/*.log*"/>
    </delete>
    <delete>
      <fileset dir="${basedir}" includes="**/junit*.properties"/>
    </delete>
  </target>
</project>
