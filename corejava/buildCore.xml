<project name="czt_core" default="all" basedir=".">
  <property name="build" location="${build.dir}/core"/>
  <property name="jar.file" location="${jar.dir}/${core.jar.file}"/>

  <target name="all" depends="jar"/>

  <target name="jar" depends="compile"
          description="generate the base jar file" >
    <jar jarfile="${jar.file}">
      <fileset dir="${build}"/>
    </jar>
  </target>

  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="compile"
          depends="init"
          description="compile the source code">
    <javac
      srcdir="${src}"
      destdir="${build}"
      debug="true"
      includes="net/sourceforge/czt/core/**"
      excludes="net/sourceforge/czt/core/jaxb/**">
    </javac>
  </target>

  <target name="clean"
          description="clean up">
    <delete dir="${build}"/>
    <delete file="${jar.file}"/>
  </target>
</project>
