<project name="czt_core" default="all" basedir=".">
  <property name="corejava.build" location="${corejava.build.dir}/core"/>
  <property name="corejava.jar.file" location="${corejava.jar.dir}/${corejava.core.jar.file}"/>

  <path id="classpath">
    <filelist dir="${corejava.jar.dir}"
      files="${corejava.base.jar.file}"/>
  </path>

  <target name="all" depends="jar"/>

  <target name="jar" depends="compile"
          description="generate the base jar file" >
    <jar jarfile="${corejava.jar.file}">
      <fileset dir="${corejava.build}"/>
    </jar>
  </target>

  <target name="init">
    <tstamp/>
    <mkdir dir="${corejava.build}"/>
  </target>

  <target name="compile"
          depends="init"
          description="compile the source code">
    <javac
      srcdir="${corejava.src.dir}"
      destdir="${corejava.build}"
      debug="true"
      includes="net/sourceforge/czt/z/**"
      excludes="net/sourceforge/czt/z/jaxb/**">
      <classpath refid="classpath"/> 
    </javac>

  </target>

  <target name="clean"
          description="clean up">
    <delete dir="${corejava.build}"/>
    <delete file="${corejava.jar.file}"/>
  </target>
</project>
