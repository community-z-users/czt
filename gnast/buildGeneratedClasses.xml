<project name="build_gen" default="all" basedir=".">
  <property name="build" location="build.gen"/>
  <property name="jar.file" location="generated.jar"/>

  <target name="all" depends="jar"/>

  <target name="jar" depends="compile"
          description="generate the base jar file" >
    <jar jarfile="${jar.file}">
      <fileset dir="${build}"/>
    </jar>
  </target>

  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="compile"
          depends="init"
          description="compile the source code">
    <javac
      srcdir="gen"
      destdir="${build}"
      debug="true"
      excludes="**/jaxb/**">
    </javac>
  </target>

  <target name="clean"
          description="clean up">
    <delete dir="${build}"/>
    <delete file="${jar.file}"/>
  </target>
</project>
