<project name="gnast" default="jar" basedir=".">
  <description>
  </description>
  <property file="build.properties"/>
  <property name="src.java" location="src/java"/>
  <property name="src.xsd" location="src/xsd"/>
  <property name="src.xsl" location="src/xsl"/>
  <property name="build" location="build"/>
  <property name="tmp" location="tmp"/>
  <property name="api.destdir" location="doc/api"/>
  <property name="jar.file" location="gnast.jar"/>

  <path id="classpath.compile">
    <fileset dir="${xalan.home}/bin" includes="*.jar"/>
    <pathelement location="${velocity.home}/velocity-1.3.1.jar"/>
  </path>

  <path id="classpath.run">
    <pathelement location="${velocity.home}/velocity-dep-1.3.1.jar"/>
    <pathelement location="${jar.file}"/>
  </path>

  <target name="jar" depends="compile"
        description="generate the jar file" >
    <jar jarfile="${jar.file}">
      <fileset dir="${build}"/>
      <fileset dir="${src.java}">
        <include name="**/*.properties"/>
      </fileset>
    </jar>
  </target>

  <target name="init">
    <tstamp/>
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init"
        description="compile the source">
    <javac srcdir="${src.java}" destdir="${build}" source="1.4" debug="true">
      <classpath refid="classpath.compile"/>
    </javac>
  </target>

  <target name="api"
    description="build javadoc documentation">
    <mkdir dir="${api.destdir}"/>
    <javadoc source="1.4"
      sourcepath="${src.java}"
      destdir="${api.destdir}"
      packagenames="*"
      private="true">
      <tag name="czt.todo" description="To do:"/>
      <classpath refid="classpath.compile"/>
    </javadoc>
  </target>

  <target name="run" depends="jar">
    <java classname="net.sourceforge.czt.gnast.Gnast" fork="true">
      <arg line="-v"/>
      <classpath refid="classpath.run"/> 
    </java>
  </target>

  <target name="pre">
    <xslt in="../zml/Z.xsd" out="${src.xsd}/Z.xsd"
      style="${src.xsl}/annotateJaxbBindings.xsl"/>
  </target>

  <target name="preZPatt">
    <xslt in="../zml/ZPattern.xsd" out="${src.xsd}/ZPattern.xsd"
      style="${src.xsl}/annotateJaxbBindings.xsl"/>
  </target>

  <target name="preOZ">
    <xslt in="../zml/Object-Z.xsd" out="${src.xsd}/Object-Z.xsd"
      style="${src.xsl}/annotateJaxbBindings.xsl"/>
  </target>

  <target name="preTCOZ">
    <xslt in="../zml/TCOZ.xsd" out="${src.xsd}/TCOZ.xsd"
      style="${src.xsl}/annotateJaxbBindings.xsl"/>
  </target>

  <target name="clean" description="clean up">
    <delete dir="${build}"/>
    <delete dir="${tmp}"/>
    <delete file="${jar.file}"/>
    <delete dir="${api.destdir}" quiet="true"/>
    <delete>
      <fileset dir="${basedir}" includes="**/*.log*"/>
    </delete>
  </target>
</project>
