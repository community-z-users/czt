<?xml version="1.0"?>
<project basedir="." default="usertest">
  <!-- set this to the relative directory name of some recent usertest results. -->
  <property name="latest.usertests" value="version8_26-07-2004"/>
  <property name="tmp.usertests" value="tmp_usertests"/>
  <property name="czt.home" location="../.."/>
  <property file="${czt.home}/czt.properties"/>
  <property name="test.build.dir" value="build"/>
  <property name="corejava.base.jar" location="${czt.home}/${jar.dir}/${corejava.base.jar.file}"/>
  <property name="corejava.core.jar" location="${czt.home}/${jar.dir}/${corejava.core.jar.file}"/>
  <property name="corejava.oz.jar" location="${czt.home}/${jar.dir}/${corejava.oz.jar.file}"/>
  <property name="corejava.jaxb.jar" location="${czt.home}/${jar.dir}/${corejava.jaxb.jar.file}"/>
  <property name="test.jar.file" location="${test.build.dir}/animatorTest.jar"/>

  <path id="classpath">
    <pathelement location="${czt.home}/${jar.dir}/${parser.jar.file}"/>
    <pathelement location="${corejava.base.jar}"/>
    <pathelement location="${corejava.core.jar}"/>
    <pathelement location="${corejava.oz.jar}"/>
    <pathelement location="${corejava.jaxb.jar}"/>
    <pathelement path="${jwsdp.classpath}"/>
    <pathelement location="${test.build.dir}"/>
    <pathelement path="${java.class.path}"/>
    <pathelement path="${czt.home}/${jar.dir}/zlive.jar"/>
  </path>
  
  <target name="init">
    <tstamp/>
    <mkdir dir="${test.build.dir}"/>
  </target>

  <target name="compile" depends="init" description="compile the tests">
    <javac srcdir="src" destdir="${test.build.dir}" debug="on"
      source="1.4">
      <classpath refid="classpath"/>
    </javac>
  </target>

  <target name="install" depends="compile">
    <jar jarfile="${test.jar.file}">
      <fileset dir="${test.build.dir}">
        <exclude name="*.jar"/>
      </fileset>
      <fileset dir="../../parser">
        <include name="tests/z/*.*"/>
        <include name="tests/oz/*.*"/>
      </fileset>
      <fileset dir="../../zml">
        <include name="examples/z/*.*"/>
        <include name="examples/oz/*.*"/>
      </fileset>
    </jar>
  </target>
  
  <target name="usertest" depends="install"
      description="Try all user tests and compare results with ${latest.usertests}">
    <junit reloading="false" printsummary="on">
      <formatter type="brief" usefile="true"/>
      <test name="net.sourceforge.czt.animation.eval.AnimateIntsTest"/>
      <test name="net.sourceforge.czt.animation.eval.AnimateMiscTest"/>
      <test name="net.sourceforge.czt.animation.eval.AnimateFreetypesTest"/>
      <test name="net.sourceforge.czt.animation.eval.AnimateScopeTest"/>
      <test name="net.sourceforge.czt.animation.eval.AnimateSetsTest"/>
      <test name="net.sourceforge.czt.animation.eval.AnimateRelationsTest"/>
      <test name="net.sourceforge.czt.animation.eval.AnimateSequencesTest"/>
      <test name="net.sourceforge.czt.animation.eval.AnimateSchemasTest"/>
      <classpath>
        <path refid="classpath"/>
        <pathelement location="${test.jar.file}"/>
      </classpath>
    </junit>
    <mkdir dir="${tmp.usertests}"/>
    <copy todir="${tmp.usertests}">
        <fileset dir="." includes="TEST-net.sourceforge.czt.*.txt"/>
    </copy>
    <java classname="net.sourceforge.czt.animation.eval.CompareUserTests">
      <arg file="${latest.usertests}"/>
      <arg file="${tmp.usertests}"/>
      <classpath>
        <path refid="classpath"/>
        <pathelement location="${test.jar.file}"/>
      </classpath>
    </java>
  </target>

  <target name="test" depends="install" description="Run all unit tests">
    <junit reloading="false" printsummary="off">
      <formatter type="brief" usefile="false"/>
      <test name="net.sourceforge.czt.animation.eval.EnvirTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatPlusTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatNegateTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatConstTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatEqualsTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatMultTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatLessThanTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatLessThanEqualsTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatMemberTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatDivTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatModTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatRangeSetTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatDiscreteSetTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatSetCompTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatCardTest"/>
      <test name="net.sourceforge.czt.animation.eval.flatpred.FlatTupleTest"/>
      <classpath>
        <path refid="classpath"/>
        <pathelement location="${test.jar.file}"/>
      </classpath>
    </junit>
  </target>

  <target name="printclasspath" description="Show the CLASSPATH">
      <pathconvert targetos="unix" property="tmp.clspath"
            refid="classpath">
    </pathconvert>
    <echo message="CLASSPATH = ${tmp.clspath}"/>
  </target>

  <target name="clean" description="clean up">
    <delete dir="${test.build.dir}"/>
  </target>
</project>
